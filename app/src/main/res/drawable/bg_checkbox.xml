<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:state_pressed="true"
        android:state_checked="true"
        android:drawable="@drawable/cb_pixelart_checked" />

    <item
        android:state_pressed="false"
        android:state_checked="true"
        android:drawable="@drawable/cb_pixelart_checked" />

    <item
        android:state_pressed="true"
        android:state_checked="false"
        android:drawable="@drawable/cb_pixelart_unchecked" />

    <item
        android:state_pressed="false"
        android:state_checked="false"
        android:drawable="@drawable/cb_pixelart_unchecked" />

    <item
        android:state_enabled="false"
        android:state_checked="true"
        android:drawable="@drawable/cb_pixelart_checked_disabled" />

    <item
        android:state_enabled="false"
        android:state_checked="false"
        android:drawable="@drawable/cb_pixelart_unchecked_disabled" />

    <item
        android:drawable="@drawable/cb_pixelart_unchecked" />
</selector>
