<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_score_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.bigscreen.binarygame.custom.GameTextView
        android:id="@+id/text_item_rank"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/line_padding"
        android:layout_weight="1"
        android:textColor="@color/primary_dark"
        android:textSize="16sp"
        app:textFont="pixelMix"
        tools:text="01" />

    <com.bigscreen.binarygame.custom.GameTextView
        android:id="@+id/text_item_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/line_padding"
        android:layout_weight="2"
        android:textColor="@color/primary_dark"
        android:textSize="16sp"
        app:textFont="pixelMix"
        tools:text="999999" />

    <com.bigscreen.binarygame.custom.GameTextView
        android:id="@+id/text_item_level"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/line_padding"
        android:layout_weight="1"
        android:textColor="@color/primary_dark"
        android:textSize="16sp"
        app:textFont="pixelMix"
        tools:text="10" />

    <com.bigscreen.binarygame.custom.GameTextView
        android:id="@+id/text_item_lines"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/line_padding"
        android:layout_weight="1"
        android:textColor="@color/primary_dark"
        android:textSize="16sp"
        app:textFont="pixelMix"
        tools:text="28" />

    <com.bigscreen.binarygame.custom.GameTextView
        android:id="@+id/text_item_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/line_padding"
        android:layout_weight="2.5"
        android:textColor="@color/primary_dark"
        android:textSize="16sp"
        app:textFont="pixelMix"
        tools:text="17/03/2015, 08:00" />

</LinearLayout>