<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.neopixl.pixlui.components.button.Button
            android:id="@+id/btn_keyboard_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/line_padding"
            android:background="@drawable/bg_btn_primary_flat"
            android:text="7"
            android:textSize="12sp"
            android:textColor="@color/white"
            pixlui:typeface="PressStart2P.ttf"/>

        <com.neopixl.pixlui.components.button.Button
            android:id="@+id/btn_keyboard_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/line_padding"
            android:background="@drawable/bg_btn_primary_flat"
            android:text="8"
            android:textSize="12sp"
            android:textColor="@color/white"
            pixlui:typeface="PressStart2P.ttf"/>

        <com.neopixl.pixlui.components.button.Button
            android:id="@+id/btn_keyboard_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/line_padding"
            android:background="@drawable/bg_btn_primary_flat"
            android:text="9"
            android:textSize="12sp"
            android:textColor="@color/white"
            pixlui:typeface="PressStart2P.ttf"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.neopixl.pixlui.components.button.Button
            android:id="@+id/btn_keyboard_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/line_padding"
            android:background="@drawable/bg_btn_primary_flat"
            android:text="4"
            android:textSize="12sp"
            android:textColor="@color/white"
            pixlui:typeface="PressStart2P.ttf"/>

        <com.neopixl.pixlui.components.button.Button
            android:id="@+id/btn_keyboard_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/line_padding"
            android:background="@drawable/bg_btn_primary_flat"
            android:text="5"
            android:textSize="12sp"
            android:textColor="@color/white"
            pixlui:typeface="PressStart2P.ttf"/>

        <com.neopixl.pixlui.components.button.Button
            android:id="@+id/btn_keyboard_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/line_padding"
            android:background="@drawable/bg_btn_primary_flat"
            android:text="6"
            android:textSize="12sp"
            android:textColor="@color/white"
            pixlui:typeface="PressStart2P.ttf"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.neopixl.pixlui.components.button.Button
            android:id="@+id/btn_keyboard_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/line_padding"
            android:background="@drawable/bg_btn_primary_flat"
            android:text="1"
            android:textSize="12sp"
            android:textColor="@color/white"
            pixlui:typeface="PressStart2P.ttf"/>

        <com.neopixl.pixlui.components.button.Button
            android:id="@+id/btn_keyboard_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/line_padding"
            android:background="@drawable/bg_btn_primary_flat"
            android:text="2"
            android:textSize="12sp"
            android:textColor="@color/white"
            pixlui:typeface="PressStart2P.ttf"/>

        <com.neopixl.pixlui.components.button.Button
            android:id="@+id/btn_keyboard_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/line_padding"
            android:background="@drawable/bg_btn_primary_flat"
            android:text="3"
            android:textSize="12sp"
            android:textColor="@color/white"
            pixlui:typeface="PressStart2P.ttf"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.neopixl.pixlui.components.button.Button
            android:id="@+id/btn_keyboard_del"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/line_padding"
            android:background="@drawable/bg_btn_accent_flat"
            android:text="DEL"
            android:textSize="10sp"
            android:textColor="@color/white"
            pixlui:typeface="PressStart2P.ttf"/>

        <com.neopixl.pixlui.components.button.Button
            android:id="@+id/btn_keyboard_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/line_padding"
            android:background="@drawable/bg_btn_primary_flat"
            android:text="0"
            android:textSize="12sp"
            android:textColor="@color/white"
            pixlui:typeface="PressStart2P.ttf"/>

        <com.neopixl.pixlui.components.button.Button
            android:id="@+id/btn_keyboard_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/line_padding"
            android:background="@drawable/bg_btn_accent_flat"
            android:text="OK"
            android:textSize="10sp"
            android:textColor="@color/white"
            pixlui:typeface="PressStart2P.ttf"/>

    </LinearLayout>

</LinearLayout>