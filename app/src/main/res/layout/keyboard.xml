<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.bigscreen.binarygame.common.component.GameButton
            android:id="@+id/button_keyboard_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/line_padding"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_primary_flat"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:textFont="pressStart" />

        <com.bigscreen.binarygame.common.component.GameButton
            android:id="@+id/button_keyboard_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/line_padding"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_primary_flat"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:textFont="pressStart" />

        <com.bigscreen.binarygame.common.component.GameButton
            android:id="@+id/button_keyboard_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/line_padding"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_primary_flat"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:textFont="pressStart" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.bigscreen.binarygame.common.component.GameButton
            android:id="@+id/button_keyboard_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/line_padding"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_primary_flat"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:textFont="pressStart" />

        <com.bigscreen.binarygame.common.component.GameButton
            android:id="@+id/button_keyboard_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/line_padding"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_primary_flat"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:textFont="pressStart" />

        <com.bigscreen.binarygame.common.component.GameButton
            android:id="@+id/button_keyboard_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/line_padding"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_primary_flat"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:textFont="pressStart" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.bigscreen.binarygame.common.component.GameButton
            android:id="@+id/button_keyboard_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/line_padding"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_primary_flat"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:textFont="pressStart" />

        <com.bigscreen.binarygame.common.component.GameButton
            android:id="@+id/button_keyboard_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/line_padding"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_primary_flat"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:textFont="pressStart" />

        <com.bigscreen.binarygame.common.component.GameButton
            android:id="@+id/button_keyboard_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/line_padding"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_primary_flat"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:textFont="pressStart" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.bigscreen.binarygame.common.component.GameButton
            android:id="@+id/button_keyboard_del"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/line_padding"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_accent_flat"
            android:text="DEL"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:textFont="pressStart"
            tools:ignore="SmallSp" />

        <com.bigscreen.binarygame.common.component.GameButton
            android:id="@+id/button_keyboard_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/line_padding"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_primary_flat"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:textFont="pressStart" />

        <com.bigscreen.binarygame.common.component.GameButton
            android:id="@+id/button_keyboard_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/line_padding"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_accent_flat"
            android:text="OK"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:textFont="pressStart"
            tools:ignore="SmallSp" />

    </LinearLayout>

</LinearLayout>